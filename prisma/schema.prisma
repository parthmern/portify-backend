generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("ORIGINAL_DB_URL")
}

model User {
  id       String   @id 
  username String   @unique 
  email    String   @unique
  name     String?
  password String   @default("123456")
  profile  Profile?
  skills Skills?
  works    Works[]
  education Education[]
}

model Profile {
  id      String @id @default(cuid()) 
  name    String
  about   String?
  img     String?
  user    User   @relation(fields: [userId], references: [id])
  userId  String @unique 
  aboutSection String?
}

model Skills {
  id   String    @id @default(cuid()) 
  name String[]
  user    User   @relation(fields: [userId], references: [id])
  userId  String @unique
  githubUsername String @default("null")
}

model Works {
  id   String    @id @default(cuid()) 
  user    User   @relation(fields: [userId], references: [id])
  userId  String 

  company     String?
  href        String?
  location    String?
  title       String
  logoUrl     String?
  start       String?
  end         String?
  description String
}

model Education {

  id   String    @id @default(cuid()) 
  user    User   @relation(fields: [userId], references: [id])
  userId  String 

  name        String
  href        String
  degree      String
  logoUrl     String
  start       String
  end         String
  description String
}